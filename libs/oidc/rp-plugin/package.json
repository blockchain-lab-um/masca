    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "29.0.3",
    "typeorm": "^0.3.10",
    "typescript": "4.9.3"

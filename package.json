{
  "name": "root",
  "private": true,
  "description": "Snap for managing VCs and VPs in MetaMask",
  "keywords": [
    "MetaMask",
    "Snaps",
    "SSI",
    "VC",
    "Verifiable Credential",
    "VP",
    "Verifiable Presentation",
    "DID:ETHR",
    "Veramo"
  ],
  "homepage": "https://github.com/blockchain-lab-um/SSISnap",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-lab-um/ssi-snap.git"
  },
  "license": "(Apache-2.0 AND MIT)",
  "author": {
    "name": "Blockchain Lab:UM",
    "email": "blockchain-lab@um.si",
    "url": "https://blockchain-lab.um.si"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological --verbose run build",
    "postinstall": "patch-package",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!**/CHANGELOG.md' '**/*.yml' --ignore-path .gitignore",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write .",
    "start": "yarn workspaces foreach --parallel --interlaced --verbose run start",
    "start:snap": "yarn workspace @blockchain-lab-um/ssi-snap start",
    "test": "echo \"TODO\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/eslint": "^7",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.12.35",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "concurrently": "^7.1.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "4.6.4"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=16.0.0"
  }
}

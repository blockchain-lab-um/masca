{
  "name": "@blockchain-lab-um/ssi-snap",
  "version": "1.1.4",
  "description": "Snap for managing VCs and VPs in MetaMask",
  "keywords": [
    "MetaMask",
    "Snaps",
    "SSI",
    "VC",
    "Verifiable Credential",
    "VP",
    "Verifiable Presentation",
    "DID:ETHR",
    "Veramo"
  ],
  "homepage": "https://github.com/blockchain-lab-um/SSISnap",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-lab-um/ssi-snap.git"
  },
  "license": "(Apache-2.0 AND MIT)",
  "author": {
    "name": "Blockchain Lab:UM",
    "email": "blockchain-lab@um.si",
    "url": "https://blockchain-lab.um.si"
  },
  "main": "src/index.ts",
  "files": [
    "dist/bundle.js",
    "snap.manifest.json",
    "package.json",
    "images"
  ],
  "scripts": {
    "audit": "audit-ci --moderate --skip-dev",
    "prebuild": "yarn run clean",
    "build": "webpack && yarn build:snap",
    "build:snap": "yarn build:snap:postprocess && mm-snap manifest --fix && yarn build:snap:eval",
    "build:snap:eval": "mm-snap eval -b dist/snap.js",
    "build:snap:postprocess": "node ./src/post-process/post-process.js",
    "clean": "rimraf dist build",
    "postinstall": "patch-package",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx",
    "lint:prettier": "prettier . --check",
    "prepare": "yarn run clean && husky install",
    "prettier": "prettier --write .",
    "serve": "mm-snap serve",
    "start": "mm-snap --version && yarn build:webpack && yarn serve"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.2",
    "@blockchain-lab-um/ssi-snap-types": "^1.0.7",
    "@blockchain-lab-um/veramo-vc-manager": "^1.0.7",
    "@ceramicnetwork/blockchain-utils-linking": "^2.0.9",
    "@ceramicnetwork/http-client": "^2.3.2",
    "@glazed/did-datastore": "^0.3.2",
    "@glazed/did-session": "^0.1.1",
    "@veramo/core": "^3.1.6-next.146",
    "@veramo/credential-eip712": "^3.1.6-next.146",
    "@veramo/credential-w3c": "3.1.6-next.146",
    "@veramo/data-store": "^3.1.6-next.146",
    "@veramo/did-jwt": "^3.1.6-next.146",
    "@veramo/did-manager": "^3.1.6-next.146",
    "@veramo/did-provider-ethr": "^3.1.6-next.146",
    "@veramo/did-resolver": "^3.1.6-next.146",
    "@veramo/key-manager": "^3.1.6-next.146",
    "@veramo/kms-local": "^3.1.6-next.146",
    "@veramo/kms-web3": "^3.1.6-next.146",
    "@veramo/message-handler": "^3.1.6-next.146",
    "@veramo/selective-disclosure": "^3.1.6-next.146",
    "did-jwt-vc": "^2.1.9",
    "did-resolver": "^3.2.0",
    "dids": "^3.2.0",
    "ethers": "^5.6.9",
    "ethr-did": "^2.2.2",
    "ethr-did-resolver": "^5.0.4",
    "key-did-provider-ed25519": "^2.0.1",
    "key-did-resolver": "^2.0.5",
    "multibase": "^4.0.6",
    "multicodec": "^3.2.1",
    "secp256k1": "^4.0.3",
    "uuid": "^8.3.2",
    "web-did-resolver": "^2.0.14"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@metamask/providers": "^9.0.0",
    "@metamask/snap-types": "^0.19.1",
    "@metamask/snaps-cli": "^0.19.1",
    "@metamask/snaps-webpack-plugin": "^0.19.1",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "audit-ci": "^6.3.0",
    "babel-loader": "^8.2.5",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "hook-shell-script-webpack-plugin": "^0.1.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "patch-package": "^6.4.7",
    "precompress": "^7.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.7.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpackbar": "^5.0.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}

{
  "name": "root",
  "private": true,
  "description": "Snap for managing VCs and VPs in MetaMask",
  "keywords": [
    "MetaMask",
    "Snaps",
    "SSI",
    "VC",
    "Verifiable Credential",
    "VP",
    "Verifiable Presentation",
    "DID:ETHR",
    "Veramo"
  ],
  "homepage": "https://github.com/blockchain-lab-um/SSISnap",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-lab-um/ssi-snap.git"
  },
  "license": "(Apache-2.0 AND MIT)",
  "author": {
    "name": "Blockchain Lab:UM",
    "email": "blockchain-lab@um.si",
    "url": "https://blockchain-lab.um.si"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn nx run-many --target=build --all",
    "build:connector": "yarn nx build @blockchain-lab-um/ssi-snap-connector",
    "build:vcmanager": "yarn nx build @blockchain-lab-um/veramo-vc-manager",
    "deploy:docs": "yarn nx deploy @blockchain-lab-um/ssi-snap-docs",
    "postinstall": "patch-package",
    "lint": "yarn prettier && yarn nx run-many --target=lint --all",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write .",
    "start": "yarn nx run-many --target=start --all",
    "start:docs": "yarn nx start @blockchain-lab-um/ssi-snap-docs",
    "start:snap": "yarn nx start @blockchain-lab-um/ssi-snap",
    "test": "yarn nx run-many --target=test --all",
    "test:ci": "yarn nx run-many --target=test:ci --all"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@nrwl/jest": "15.0.3",
    "@types/eslint": "^7",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^29.2.1",
    "lint-staged": "^13.0.3",
    "nx": "15.0.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=16.0.0"
  }
}

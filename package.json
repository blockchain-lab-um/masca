{
  "name": "root",
  "private": true,
  "description": "Snap for managing VCs and VPs in MetaMask",
  "keywords": [
    "MetaMask",
    "Snaps",
    "SSI",
    "VC",
    "Verifiable Credential",
    "VP",
    "Verifiable Presentation",
    "DID:ETHR",
    "Veramo"
  ],
  "homepage": "https://github.com/blockchain-lab-um/SSISnap",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-lab-um/ssi-snap.git"
  },
  "license": "(Apache-2.0 AND MIT)",
  "author": {
    "name": "Blockchain Lab:UM",
    "email": "blockchain-lab@um.si",
    "url": "https://blockchain-lab.um.si"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn nx affected --target=build",
    "build:all": "yarn nx run-many --target=build --all",
    "build:connector": "yarn nx build @blockchain-lab-um/ssi-snap-connector",
    "build:docs": "yarn nx build @blockchain-lab-um/ssi-snap-docs",
    "build:vcmanager": "yarn nx build @blockchain-lab-um/veramo-vc-manager",
    "deploy:docs": "yarn nx deploy @blockchain-lab-um/ssi-snap-docs",
    "postinstall": "patch-package",
    "lint": "yarn prettier && yarn nx affected --target=lint",
    "lint:all": "yarn prettier && yarn nx run-many --target=lint --all",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write .",
    "start": "yarn nx run-many --target=start --all",
    "start:docs": "yarn nx start @blockchain-lab-um/ssi-snap-docs",
    "start:snap": "yarn nx start @blockchain-lab-um/ssi-snap",
    "test": "yarn nx affected --target=test",
    "test:all": "yarn nx run-many --target=test --all",
    "test:ci": "yarn nx affected --target=test:ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@nrwl/devkit": "15.3.0",
    "@nrwl/jest": "15.3.0",
    "@nrwl/nx-cloud": "^15.0.2",
    "@types/eslint": "^8.4.10",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.4",
    "nx": "15.3.0",
    "patch-package": "^6.5.0",
    "prettier": "^2.8.0",
    "prettier-plugin-packagejson": "^2.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0"
  },
  "packageManager": "yarn@3.3.0",
  "engines": {
    "node": ">=18.12"
  },
  "volta": {
    "node": "18.12.1",
    "yarn": "3.3.0"
  }
}

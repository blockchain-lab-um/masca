{
  "releaseType": "node",
  "changelog-sections": [
    {
      "type": "feat",
      "section": ":rocket: Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": ":bug: Bug Fixes",
      "hidden": false
    },

    {
      "type": "docs",
      "section": ":page_with_curl: Documentation",
      "hidden": false
    },
    { "type": "perf", "section": "Performance Improvements", "hidden": true },
    { "type": "revert", "section": "Reverts", "hidden": true }
  ],
  "packages": {
    "packages/connector": {
      "component": "masca-connector",
      "releaseType": "node",
      "bumpMinorPreMajor": false,
      "bumpPatchForMinorPreMajor": false,
      "changelogPath": "CHANGELOG.md",
      "versioning": "default"
    },
    "packages/types": {
      "component": "masca-types",
      "releaseType": "node",
      "bumpMinorPreMajor": false,
      "bumpPatchForMinorPreMajor": false,
      "changelogPath": "CHANGELOG.md",
      "versioning": "default"
    },
    "packages/vcmanager": {
      "component": "masca-vcmanager",
      "releaseType": "node",
      "bumpMinorPreMajor": false,
      "bumpPatchForMinorPreMajor": false,
      "changelogPath": "CHANGELOG.md",
      "versioning": "default"
    },
    "packages/snap": {
      "component": "masca",
      "releaseType": "node",
      "bumpMinorPreMajor": false,
      "bumpPatchForMinorPreMajor": false,
      "changelogPath": "CHANGELOG.md",
      "versioning": "default",
      "extra-files": [
        {
          "type": "json",
          "path": "snap.manifest.json",
          "jsonpath": "$.version"
        }
      ]
    },
    "libs/utils": {
      "release-as": "1.0.0",
      "component": "utils",
      "releaseType": "node",
      "bumpMinorPreMajor": false,
      "bumpPatchForMinorPreMajor": false,
      "changelogPath": "CHANGELOG.md",
      "versioning": "default"
    }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "masca-core",
      "components": [
        "masca-connector",
        "masca-types",
        "masca-vcmanager",
        "masca"
      ]
    }
  ]
}

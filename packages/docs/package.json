{
  "name": "@blockchain-lab-um/ssi-snap-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf .docusaurus build",
    "build": "docusaurus build",
    "postbuild": "yarn compress",
    "clear": "docusaurus clear",
    "compress": "precompress build --types gz --include html,css,js,map",
    "deploy": "docusaurus deploy",
    "docusaurus": "docusaurus",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "serve": "docusaurus serve",
    "start": "docusaurus start",
    "swizzle": "docusaurus swizzle",
    "write-heading-ids": "docusaurus write-heading-ids",
    "write-translations": "docusaurus write-translations"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@blockchain-lab-um/ssi-snap-connector": "*",
    "@blockchain-lab-um/ssi-snap-types": "*",
    "@docusaurus/core": "2.0.0-rc.1",
    "@docusaurus/preset-classic": "2.0.0-rc.1",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@ethersproject/providers": "^5.7.0",
    "@mdx-js/react": "^1.6.22",
    "@metamask/providers": "^9.0.0",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.10.1",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "clsx": "^1.1.1",
    "docusaurus2-dotenv": "^1.4.0",
    "ethers": "^5.7.0",
    "prism-react-renderer": "^1.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "web3": "^1.7.5"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.0.0-rc.1",
    "@tsconfig/docusaurus": "^1.0.6",
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "16.11.45",
    "@types/react": "17.0.47",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "precompress": "^7.0.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "typescript": "^4.7.4"
  },
  "nx": {
    "namedInputs": {
      "production": [
        "{projectRoot}/**/*",
        "!{projectRoot}/**/*.spec.ts",
        "!{projectRoot}/tsconfig,eslint.ts",
        "!{projectRoot}/.lintstagedrc.js",
        "!{projectRoot}/README.md"
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/build",
          "{projectRoot}/.docusaurus"
        ]
      }
    }
  }
}

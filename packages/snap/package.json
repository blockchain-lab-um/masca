{
  "name": "@blockchain-lab-um/ssi-snap",
  "version": "1.3.0",
  "description": "Snap for managing VCs and VPs in MetaMask",
  "keywords": [
    "MetaMask",
    "Snaps",
    "SSI",
    "VC",
    "Verifiable Credential",
    "VP",
    "Verifiable Presentation",
    "DID:ETHR",
    "Veramo"
  ],
  "homepage": "https://github.com/blockchain-lab-um/SSISnap",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-lab-um/ssi-snap.git"
  },
  "license": "(Apache-2.0 AND MIT)",
  "author": {
    "name": "Blockchain Lab:UM",
    "email": "blockchain-lab@um.si",
    "url": "https://blockchain-lab.um.si"
  },
  "main": "src/index.ts",
  "files": [
    "dist/snap.js",
    "snap.manifest.json",
    "package.json",
    "images"
  ],
  "scripts": {
    "audit": "audit-ci --moderate --skip-dev",
    "prebuild": "yarn run clean",
    "build": "mm-snap --version && yarn build:webpack && yarn build:snap",
    "build:snap": "yarn build:snap:postprocess && mm-snap manifest --fix && yarn build:snap:eval",
    "build:snap:eval": "mm-snap eval -b dist/snap.js",
    "build:snap:postprocess": "node ./src/post-process/post-process.js",
    "build:webpack": "NODE_OPTIONS=--max-old-space-size=4096 webpack",
    "clean": "rimraf dist coverage",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "serve": "mm-snap serve",
    "start": "mm-snap --version && yarn build && yarn serve",
    "test": "jest",
    "test:ci": "yarn test --silent --coverage"
  },
  "dependencies": {
    "@babel/runtime": "7.20.5",
    "@blockchain-lab-um/ssi-snap-types": "*",
    "@blockchain-lab-um/veramo-vc-manager": "*",
    "@ceramicnetwork/http-client": "^2.10.0",
    "@didtools/pkh-ethereum": "^0.0.2",
    "@glazed/did-datastore": "0.3.2",
    "@glazed/did-session": "0.1.1",
    "@metamask/key-tree": "^6.0.0",
    "@types/jsonpath": "^0.2.0",
    "@types/uuid": "8.3.4",
    "@veramo/core": "4.2.0",
    "@veramo/credential-eip712": "4.2.0",
    "@veramo/credential-ld": "^4.2.0",
    "@veramo/credential-w3c": "4.2.0",
    "@veramo/did-manager": "4.2.0",
    "@veramo/did-provider-ethr": "4.2.0",
    "@veramo/did-provider-pkh": "4.2.0",
    "@veramo/did-resolver": "4.2.0",
    "@veramo/key-manager": "4.2.0",
    "@veramo/kms-local": "4.2.0",
    "@veramo/utils": "4.2.0",
    "ceramic-cacao": "^1.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "crypto-browserify": "^3.12.0",
    "did-jwt-vc": "3.1.0",
    "did-resolver": "4.0.1",
    "did-session": "^1.0.0",
    "dids": "^3.4.0",
    "eth-sig-util": "3.0.1",
    "ethers": "5.7.2",
    "ethr-did": "2.3.6",
    "ethr-did-resolver": "8.0.0",
    "json-loader": "^0.5.7",
    "jsonpath": "^1.1.1",
    "key-did-provider-ed25519": "^2.0.1",
    "key-did-resolver": "2.3.0",
    "multibase": "^4.0.6",
    "multicodec": "^3.2.1",
    "postinstall-postinstall": "2.1.0",
    "secp256k1": "4.0.3",
    "ts-jest": "^29.0.3",
    "uuid": "^9.0.0",
    "web-did-resolver": "2.0.21"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.5",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-transform-flow-strip-types": "^7.19.0",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@metamask/providers": "^10.2.1",
    "@metamask/snap-types": "^0.23.0",
    "@metamask/snaps-cli": "^0.26.2",
    "@metamask/snaps-webpack-plugin": "^0.26.2",
    "@types/jest": "^29.2.3",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "audit-ci": "^6.3.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "hook-shell-script-webpack-plugin": "^0.1.4",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.4",
    "lodash.clonedeep": "^4.5.0",
    "precompress": "^9.1.1",
    "prettier": "^2.8.0",
    "prettier-plugin-packagejson": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-merge": "^5.8.0",
    "webpackbar": "^5.0.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "nx": {
    "namedInputs": {
      "production": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/snap.config.js",
        "{projectRoot}/snap.manifest.json",
        "{projectRoot}/tsconfig.build.json",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/webpack.config.ts",
        "{projectRoot}/babel.config.ts",
        "{projectRoot}/eslintrc.js",
        "{projectRoot}/.prettierignore",
        "{projectRoot}/images/**/*"
      ]
    },
    "targets": {
      "start": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}

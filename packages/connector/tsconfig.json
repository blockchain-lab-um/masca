{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "nodenext",

    "outDir": "./dist",
    "baseUrl": ".",

    "declaration": true,
    "inlineSourceMap": true,
    "incremental": false,
    "removeComments": true,

    "lib": ["dom", "ES2020"],
    "typeRoots": ["globals.d.ts"]
  },
  "include": ["src/**/*.ts", "globals.d.ts"]
}

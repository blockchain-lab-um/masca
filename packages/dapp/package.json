{
  "name": "@blockchain-lab-um/dapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint-staged": "lint-staged",
    "lint": "yarn lint:prettier && yarn lint:next && yarn lint:tsc && yarn lint:stylelint",
    "lint:next": "next lint",
    "lint:prettier": "prettier . --check",
    "lint:tsc": "tsc -p tsconfig.json --noEmit --incremental false",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\""
  },
  "dependencies": {
    "@next/font": "13.1.3",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "clsx": "^1.2.1",
    "next": "13.1.3",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^4.3.2"
  },
  "devDependencies": {
    "@svgr/webpack": "^6.5.1",
    "@types/eslint": "^8",
    "@types/prettier": "^2",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.32.0",
    "eslint-config-next": "^13.1.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-webpack-plugin": "^3.3.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "nx": {
    "namedInputs": {
      "production": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.json"
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/.next"
        ]
      },
      "start": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "build"
        ],
        "outputs": []
      }
    }
  }
}

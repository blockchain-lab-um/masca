{
  "name": "@blockchain-lab-um/dapp",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "rimraf .next && next build",
    "build:docker": "pnpm build",
    "dev": "cross-env USE_LOCAL='true' next dev",
    "docker:build": "docker build . -t blockchain-lab-um/dapp:latest",
    "lint": "pnpm lint:next && pnpm lint:tsc && pnpm lint:prettier && pnpm lint:stylelint",
    "lint-staged": "lint-staged",
    "lint:next": "next lint",
    "lint:prettier": "prettier . --check",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
    "lint:tsc": "tsc -p tsconfig.json --noEmit --incremental false",
    "start": "next start"
  },
  "dependencies": {
    "@blockchain-lab-um/masca-connector": "*",
    "@blockchain-lab-um/masca-types": "*",
    "@blockchain-lab-um/oidc-types": "*",
    "@blockchain-lab-um/utils": "*",
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.18",
    "@metamask/detect-provider": "^2.0.0",
    "@metamask/providers": "^10.2.0",
    "@radix-ui/react-toast": "^1.1.4",
    "@tanstack/react-table": "^8.9.1",
    "@veramo/core": "5.2.0",
    "clsx": "^1.2.1",
    "ethers": "^6.0.8",
    "next": "13.4.4",
    "next-intl": "^2.14.6",
    "next-themes": "^0.2.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prop-types": "^15.8.1",
    "qs": "^6.11.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-scrollbar": "^3.0.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.1",
    "@svgr/webpack": "^8.0.1",
    "@types/eslint": "^8.40.0",
    "@types/node": "^18.16.15",
    "@types/qs": "^6.9.7",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-next": "^13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.4",
    "prettier-plugin-packagejson": "^2.4.3",
    "rimraf": "^5.0.1",
    "sass": "^1.62.1",
    "stylelint": "^15.6.2",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-prettier": "^3.0.0",
    "stylelint-webpack-plugin": "^4.1.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5"
  },
  "nx": {
    "namedInputs": {
      "production": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/next.config.js",
        "{projectRoot}/tailwind.config.cjs"
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/.next"
        ]
      },
      "start": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "build"
        ],
        "outputs": []
      }
    }
  }
}

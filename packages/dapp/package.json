{
  "name": "@blockchain-lab-um/dapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "build:docker": "next export",
    "dev": "next dev",
    "docker:build": "docker build . -t blockchain-lab-um/dapp:latest",
    "lint": "pnpm lint:next && pnpm lint:tsc && pnpm lint:prettier && pnpm lint:stylelint",
    "lint-staged": "lint-staged",
    "lint:next": "next lint",
    "lint:prettier": "prettier . --check",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
    "lint:tsc": "tsc -p tsconfig.json --noEmit --incremental false",
    "start": "next start"
  },
  "dependencies": {
    "@next/font": "13.1.6",
    "@types/node": "18.15.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "clsx": "^1.2.1",
    "next": "13.1.6",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^4.3.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@svgr/webpack": "^6.5.1",
    "@types/eslint": "^8.21.1",
    "@types/prettier": "^2",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-packagejson": "^2.4.3",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-webpack-plugin": "^3.3.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "nx": {
    "namedInputs": {
      "production": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/next.config.js",
        "{projectRoot}/tailwind.config.cjs"
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/.next"
        ]
      },
      "build:docker": {
        "inputs": [],
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "start": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "build"
        ],
        "outputs": []
      }
    }
  }
}

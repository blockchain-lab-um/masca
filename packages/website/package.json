{
  "name": "@blockchain-lab-um/website",
  "version": "0.0.01",
  "scripts": {
    "start": "vite",
    "build": "run-p type-check build-only && echo > dist/.nojekyll",
    "docker:build": "docker build . -t blockchain-lab-um/ssi-snap-website:latest",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@blockchain-lab-um/ssi-snap-connector": "*",
    "@blockchain-lab-um/ssi-snap-types": "*",
    "axios": "^1.1.3",
    "ethers": "^5.7.2",
    "pinia": "^2.0.21",
    "primeflex": "^3.3.0",
    "primeicons": "^6.0.1",
    "primevue": "^3.18.1",
    "sass": "^1.56.1",
    "vue": "^3.2.38",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.28.0",
    "eslint-plugin-vue": "^9.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "typescript": "~4.9.3",
    "vite": "^3.2.4",
    "vue-tsc": "^1.0.9"
  },
  "nx": {
    "namedInputs": {
      "production": [
        "{projectRoot}/**/*",
        "!{projectRoot}/**/*.spec.ts",
        "!{projectRoot}/README.md"
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "start": {
        "inputs": [
          "production",
          "^production"
        ],
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}

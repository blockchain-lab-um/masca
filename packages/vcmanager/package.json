{
  "name": "@blockchain-lab-um/veramo-vc-manager",
  "version": "1.0.7",
  "license": "MIT",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist",
    "compile": "tsc --build tsconfig.build.json",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@blockchain-lab-um/ssi-snap-types": "*",
    "@veramo/core": "^4.0.2-next.9",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/rimraf": "^3",
    "@types/uuid": "^8.3.4",
    "@veramo/cli": "3.1.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "jest": "27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "27.1.4",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/src",
        "{projectRoot}/static",
        "{projectRoot}/docs"
      ],
      "production": [
        "default",
        "!{projectRoot}/index.html",
        "!{projectRoot}/**/*.spec.ts",
        "!{projectRoot}/**/*.md",
        "!{projectRoot}/tsconfig.spec.json",
        "!{projectRoot}/jest.config.ts",
        "!{projectRoot}/.eslintrc.json",
        "!{projectRoot}/tests/**/*.ts"
      ]
    }
  }
}

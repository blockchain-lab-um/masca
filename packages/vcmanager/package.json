{
  "name": "@blockchain-lab-um/veramo-vc-manager",
  "version": "1.3.0",
  "license": "MIT",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm compile",
    "clean": "rimraf dist",
    "compile": "tsc --build tsconfig.build.json",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "prepack": "pnpm build",
    "test": "pnpm jest"
  },
  "dependencies": {
    "@blockchain-lab-um/ssi-snap-types": "*",
    "@types/jsonpath": "^0.2.0",
    "@veramo/core": "^5.0.0",
    "jsonpath": "^1.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/prettier": "^2.7.2",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^9.0.1",
    "@veramo/cli": "5.0.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.4.3",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "ts-jest": "29.0.5",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/src",
        "{projectRoot}/static",
        "{projectRoot}/docs"
      ],
      "production": [
        "default",
        "!{projectRoot}/index.html",
        "!{projectRoot}/**/*.spec.ts",
        "!{projectRoot}/**/*.md",
        "!{projectRoot}/tsconfig.spec.json",
        "!{projectRoot}/jest.config.ts",
        "!{projectRoot}/.eslintrc.json",
        "!{projectRoot}/tests/**/*.ts"
      ]
    }
  }
}

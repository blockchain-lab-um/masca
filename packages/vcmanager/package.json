{
  "name": "@blockchain-lab-um/veramo-vc-manager",
  "version": "1.0.7",
  "license": "MIT",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist",
    "compile": "tsc --build tsconfig.build.json",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "prepack": "yarn build",
    "test": "yarn jest"
  },
  "dependencies": {
    "@blockchain-lab-um/ssi-snap-types": "*",
    "@types/jsonpath": "^0.2.0",
    "@veramo/core": "^4.1.1",
    "jsonpath": "^1.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.2.3",
    "@types/prettier": "^2.7.1",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "@veramo/cli": "4.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "^4.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/src",
        "{projectRoot}/static",
        "{projectRoot}/docs"
      ],
      "production": [
        "default",
        "!{projectRoot}/index.html",
        "!{projectRoot}/**/*.spec.ts",
        "!{projectRoot}/**/*.md",
        "!{projectRoot}/tsconfig.spec.json",
        "!{projectRoot}/jest.config.ts",
        "!{projectRoot}/.eslintrc.json",
        "!{projectRoot}/tests/**/*.ts"
      ]
    }
  }
}
